extends ../templates/_root

append body
  div.container.mx-auto
    include ../includes/header
    include ../includes/text-triptych

    section.relative
      img(src='assets/background.svg' alt="Illustrations of things related to 2020, such as toilet paper, zoom screen, covid, mask").rellax

    section.output-wrapper.relative.-mt-300.mx-full.pt-250.pb-100
      div.max-w-700.mx-auto
        form(name="generateForm" id="generateForm" action="").flex.flex-col.items-center
          div.grid.gap-25.grid-cols-2.grid-rows-2
            input(type="number" name="number" required="required" value="2").block.py-10.pl-25.pr-10.border.border-gray-900.font-lato.font-bold.col-start-1
            select(name="type" required).block.py-10.pl-25.pr-150.uppercase.font-lato.font-bold.border.border-gray-900.appearance-none.relative.col-start-2
